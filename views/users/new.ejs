    <!-- ===== MAIN FITTING ROOM 3 CONTENT ===== -->
    <div class="main">
      <!-- messages -->
      <div class="sign-up-box">
        <h1>Create Your Account</h1>
        <form action="/users" method="POST">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" required>
